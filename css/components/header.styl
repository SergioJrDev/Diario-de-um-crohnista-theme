 		& {
 			.share {
 				display: none;
 			}
 		}
 	}
 	@media screen and (min-width: sm) {
		& {
			.sm-4-12:nth-child(2) {
				/* width: 98px; */
			}
		}
 	}
}

/* Middle */
.middle {
	.logo {
	    right: 0;
	    left: 0;
	    top: 6px;
	    text-align: center;
	}
	.nav {
		&-content {
			max-width: 700px;
			margin auto;
		}
	}
	@media screen and (min-width: sm) {
 		& {
 			.logo {
			    position: absolute;
    			top: auto;
			}
			.nav {
				width: 100%;
				&-list {
					li:nth-child(4),
					li:nth-child(5),
					li:nth-child(6) {
						float: right;
					}
				}
			}
 		}
 	}
}
